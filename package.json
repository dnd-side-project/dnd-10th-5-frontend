{
  "name": "favolink",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "scripts": {
    "build": "turbo build",
    "build:extension": "turbo build --filter=extension",
    "build:web": "turbo build --filter=web",
    "dev": "turbo dev",
    "dev:extension": "turbo dev --filter=extension",
    "dev:web": "turbo dev --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "lint:pack": "packlint sort -R",
    "postinstall": "pnpm lint:pack",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@tsconfig/favolink": "workspace:*",
    "eslint": "^8.56.0",
    "eslint-config-favolink": "workspace:*",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "packlint": "^0.2.4",
    "prettier": "^3.1.1",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
